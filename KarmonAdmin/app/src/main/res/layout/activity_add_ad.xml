<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAd"
    android:background="@drawable/profile_nav_bar">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/ad_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UId"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>
            <EditText
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sarlavha"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Qisqacha ma'lumot"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/ad_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/ad_url_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL Sayt"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/ad_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To'lov"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_send_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_back"
                    android:padding="16dp"
                    android:text="Menga yubor" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_send_to_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_back"
                    android:padding="16dp"
                    android:text="Reklama beruvchiga yubor" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:orientation="vertical"
                android:outlineSpotShadowColor="#000000">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="24dp"
                            android:text="Reklama yuborilishi kerak bo'lgan odamlarga mos ma'lumotlarni belgilang"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/CheckMan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:paddingHorizontal="10dp"
                                android:text="Erkak"
                                android:textSize="20dp" />

                            <CheckBox
                                android:id="@+id/CheckWoman"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:paddingHorizontal="10dp"
                                android:text="Ayol"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yoshi "
                                android:textColor="#ffffff"
                                android:textSize="20dp" />

                            <NumberPicker
                                android:id="@+id/number_pickerMin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" dan "
                                android:textColor="#ffffff"
                                android:textSize="20dp" />

                            <NumberPicker
                                android:id="@+id/number_pickerMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" gacha"
                                android:textColor="#ffffff"
                                android:textSize="20dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/regions_choose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:paddingLeft="20dp"
                                android:text="VILOYATLAR"
                                android:textColor="#ffffff"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/profs_choose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:paddingLeft="20dp"
                                android:text="KASBLAR"
                                android:textColor="#ffffff"
                                android:textSize="20dp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/users_count"
                                android:layout_width="121dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Hisoblanmadi"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/count_users"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginVertical="5dp"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/profile_back"
                                    android:padding="16dp"
                                    android:text="Odam sonini hisoblash" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/table_row_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Odam soni "
                                android:textColor="#ffffff"
                                android:textSize="16dp" />

                            <NumberPicker
                                android:id="@+id/number_pickerUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="16dp" />

                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:id="@+id/table_row_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="60dp"
                        android:visibility="gone">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/profile_back"
                                android:padding="16dp"
                                android:text="Yuborish" />
                        </androidx.cardview.widget.CardView>

                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>