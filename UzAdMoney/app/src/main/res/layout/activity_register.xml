<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_nav_bar"
    android:id="@+id/relative_registration"
    tools:context=".RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MA'LUMOTLAR"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginVertical="30dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="#ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittextSurname"
                android:hint="Familiya"
                android:layout_margin="15dp"
                android:textColor="#ffffff"
                android:shadowColor="#ffffff"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="#ffffff"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittextName"
                android:hint="Ism"
                android:layout_margin="15dp"
                android:textColor="#ffffff" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jins"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:textColor="#ffffff"/>
        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSex"
            android:entries="@array/sexArray"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viloyat"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:textColor="#ffffff"/>
        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerRegion"
            android:entries="@array/regions"
            android:layout_margin="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kasb"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:textColor="#ffffff"/>
        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerProf"
            android:entries="@array/professions"
            android:layout_margin="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittextDate"
                android:hint="Tug'ilgan sana"
                android:focusable="false"
                android:inputType="none"
                android:layout_margin="15dp"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"/>
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Saqlash"
            android:background="@drawable/profile_back"
            android:textColor="#ffffff"
            android:elevation="10dp"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>