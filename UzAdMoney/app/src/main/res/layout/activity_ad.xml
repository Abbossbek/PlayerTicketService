<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ARCompany.UzAdMoney.AdActivity"
    android:background="#ffffff">
    <TextView
        android:id="@+id/text_no_connection"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Internetga ulanish yo'q"/>
    <ProgressBar
        android:id="@+id/progress_bar_ad_view"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/profile_nav_bar"
        android:visibility="visible"
        tools:visibility="visible" />

    <com.github.clans.fab.Label
        android:id="@+id/label_timer"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:textStyle="bold"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ad_web_view"/>
        <Button
            android:id="@+id/btn_ad"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="O'tish"
            android:layout_margin="2dp"/>
</RelativeLayout>
