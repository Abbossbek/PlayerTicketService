<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ARCompany.UzAdMoney.RegistrationEmail"
    android:background="@drawable/profile_nav_bar"
    android:id="@+id/relative_registration_mail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TASDIQLASH"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_marginVertical="20dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:textColorHint="#ffffff">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittextCode"
                    android:hint="Kodni kiriting"
                    android:inputType="number"
                    android:layout_margin="15dp"
                    android:textColor="#ffffff"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/buttonVerification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Tasdiqlash"
                android:background="@drawable/profile_back"
                android:textColor="#ffffff"
                android:elevation="10dp"/>
        </LinearLayout>
</RelativeLayout>
