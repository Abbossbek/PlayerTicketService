<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ARCompany.UzAdMoney.AddAdActivity"
    android:background="@drawable/profile_back"
    android:id="@+id/relative_add_ad1">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_flipper">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:id="@+id/line_add_ad1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="15dp"
                                    android:paddingVertical="16dp"
                                    android:text="Rasmli reklama"
                                    android:textSize="20dp"
                                    android:textColor="#ffffff" />

                                <ImageView
                                    android:id="@+id/ad_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginVertical="10dp"
                                    android:src="@drawable/ad_gif" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/select_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/select_image_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Yuklash"
                                            android:textColor="#ffffff" />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btn_send_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginHorizontal="12dp"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/btn_send_image_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Keyingi"
                                            android:textColor="#ffffff"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:id="@+id/line_add_ad2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="15dp"
                                    android:paddingVertical="16dp"
                                    android:text="Harakatlanadigan rasmli reklama"
                                    android:textSize="20dp"
                                    android:textColor="#ffffff"/>

                                <pl.droidsonroids.gif.GifImageView
                                    android:id="@+id/ad_gif"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginVertical="16dp"
                                    android:src="@drawable/ad_gif" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/select_gif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/select_gif_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Yuklash"
                                            android:textColor="#ffffff"/>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btn_send_gif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginHorizontal="12dp"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/btn_send_gif_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Keyingi"
                                            android:textColor="#ffffff" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:id="@+id/line_add_ad3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="15dp"
                                    android:paddingVertical="16dp"
                                    android:text="Video reklama"
                                    android:textSize="20dp"
                                    android:textColor="#ffffff" />

                                <VideoView
                                    android:id="@+id/video_ad"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_marginVertical="10dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/select_video"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/select_video_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Yuklash"
                                            android:textColor="#ffffff"/>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btn_send_video"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginHorizontal="12dp"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/btn_send_video_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="15dp"
                                            android:text="Keyingi"
                                            android:textColor="#ffffff"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_add_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <EditText
                            android:id="@+id/ad_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sarlavha"
                            android:maxLength="70" />

                        <EditText
                            android:id="@+id/ad_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="Qisqacha ma'lumot"
                            android:inputType="textMultiLine"
                            android:maxLength="250" />

                        <EditText
                            android:id="@+id/ad_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Web sayt manzili (agar mavjud bo'lsa)"
                            android:maxLength="150" />

                        <EditText
                            android:id="@+id/ad_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bog'lanish uchun telefon raqami"
                            android:maxLength="40" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp"
                            android:orientation="vertical"
                            android:outlineSpotShadowColor="#000000">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp">

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="24dp"
                                        android:text="Reklama yuborilishi kerak bo'lgan odamlarga mos ma'lumotlarni belgilang"
                                        android:textAlignment="center"
                                        android:textColor="#ffffff"
                                        android:textSize="20dp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <CheckBox
                                            android:id="@+id/CheckMan"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true"
                                            android:paddingHorizontal="10dp"
                                            android:text="Erkak"
                                            android:textSize="20dp" />

                                        <CheckBox
                                            android:id="@+id/CheckWoman"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true"
                                            android:paddingHorizontal="10dp"
                                            android:text="Ayol"
                                            android:textSize="20dp" />
                                    </LinearLayout>
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Yoshi "
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />

                                        <NumberPicker
                                            android:id="@+id/number_pickerMin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" dan "
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />

                                        <NumberPicker
                                            android:id="@+id/number_pickerMax"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" gacha"
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />
                                    </LinearLayout>

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/regions_choose"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="20dp"
                                            android:paddingLeft="20dp"
                                            android:text="VILOYATLAR"
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/profs_choose"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="20dp"
                                            android:paddingLeft="20dp"
                                            android:text="KASBLAR"
                                            android:textColor="#ffffff"
                                            android:textSize="20dp" />
                                    </LinearLayout>

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/users_count"
                                            android:layout_width="121dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Hisoblanmadi"
                                            android:textAlignment="center"
                                            android:textSize="18dp" />

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/count_users"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_marginHorizontal="15dp"
                                            android:layout_marginVertical="5dp"
                                            app:cardCornerRadius="10dp">

                                            <TextView
                                                android:id="@+id/count_users_t"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/profile_back"
                                                android:padding="16dp"
                                                android:text="Odam sonini hisoblash"
                                                android:textColor="#ffffff"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>

                                </TableRow>

                                <TableRow
                                    android:id="@+id/table_row_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Odam soni "
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                        <NumberPicker
                                            android:id="@+id/number_pickerUsers"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" Narxi: "
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:id="@+id/text_cost"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" so'm"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                    </LinearLayout>
                                </TableRow>
                                <TableRow
                                    android:id="@+id/table_row_pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minHeight="60dp"
                                    android:visibility="gone">
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/card_pay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginHorizontal="15dp"
                                        android:layout_marginVertical="5dp"
                                        app:cardCornerRadius="10dp">

                                        <TextView
                                            android:id="@+id/card_pay_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/profile_back"
                                            android:padding="16dp"
                                            android:text="To'lov qilish"
                                            android:textColor="#ffffff"/>
                                    </androidx.cardview.widget.CardView>

                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

        </ViewFlipper>
    </LinearLayout>
</RelativeLayout>
